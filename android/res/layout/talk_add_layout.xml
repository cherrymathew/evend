<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <LinearLayout
        android:id="@+id/talkAddLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/talkTitleLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title "
                android:textSize="15sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/talkTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Your presentation title" >

                <requestFocus />
            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/talkTypeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Type "
                android:textSize="15sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/talkType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:listitem="@android:layout/simple_list_item_1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/talkEventLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Event "
                android:textSize="15sp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/talkEvent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:listitem="@android:layout/simple_list_item_1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/talkDurationLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Duration "
                android:textSize="15sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/talkDuration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="e.g. 1 hr " >
            </EditText>
        </LinearLayout>

        <CheckBox
            android:id="@+id/coPresenterCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Do you have Co-Presenters for your event?" />

        <CheckBox
            android:id="@+id/projectorCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Do you need a projecter for your event?" />

        <CheckBox
            android:id="@+id/toolsCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Do you need tools for your event?" />

        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" 
            android:orientation="vertical">

            <TextView
                android:id="@+id/talkNotesLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notes"
                android:textSize="15sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/talkNotes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textMultiLine"
                android:hint="Any additional information you would like to provide" >
            </EditText>
        </LinearLayout>

        <Button
            android:id="@+id/saveTalk"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Save" />
    </LinearLayout>

</ScrollView>