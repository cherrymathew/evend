<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/talkTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:text="@string/placeholder_text_label_2"
            android:textSize="@dimen/view_text_size_15sp" />

        <Button
            android:id="@+id/removeTalk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:minHeight="28dp"
            android:minWidth="48dp"
            android:onClick="talkRemove"
            android:text="@string/talks_row_delete_label"
            android:textSize="@dimen/view_text_size_15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/view_horizontal_margin_5dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/talkTypeLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.01"
                android:ems="10"
                android:text="@string/talks_row_type_label"
                android:textSize="@dimen/view_text_size_10sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/talkType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:text="@string/placeholder_text_label_1"
                android:textSize="@dimen/view_text_size_10sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/view_horizontal_margin_5dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/talkDurationLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.01"
                android:ems="10"
                android:text="@string/talks_row_duration_label"
                android:textSize="@dimen/view_text_size_10sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/talkDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:text="@string/placeholder_text_label_1"
                android:textSize="@dimen/view_text_size_10sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/view_horizontal_margin_5dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/talkEventLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.01"
                android:ems="10"
                android:text="@string/talks_row_event_label"
                android:textSize="@dimen/view_text_size_10sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/talkEvent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:text="@string/placeholder_text_label_1"
                android:textSize="@dimen/view_text_size_10sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/view_horizontal_margin_5dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/talkHasCoPresentersLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.01"
                android:ems="10"
                android:text="@string/talks_row_co_presenter_label"
                android:textSize="@dimen/view_text_size_10sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/talkHasCoPresenters"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:text="@string/placeholder_text_label_no"
                android:textSize="@dimen/view_text_size_10sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/view_horizontal_margin_5dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/talkNeedsProjectorLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.01"
                android:ems="10"
                android:text="@string/talks_row_projector_label"
                android:textSize="@dimen/view_text_size_10sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/talkNeedsProjector"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:text="@string/placeholder_text_label_yes"
                android:textSize="@dimen/view_text_size_10sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/view_horizontal_margin_5dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/talkNeedsToolsLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.01"
                android:ems="10"
                android:text="@string/talks_row_tools_label"
                android:textSize="@dimen/view_text_size_10sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/talkNeedsTools"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:text="@string/placeholder_text_label_no"
                android:textSize="@dimen/view_text_size_10sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/view_horizontal_margin_5dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/talkNotesLabel"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:text="@string/talks_row_notes_label"
                android:textSize="@dimen/view_text_size_10sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/talkNotes"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:text="@string/placeholder_text_label_3"
                android:textSize="@dimen/view_text_size_10sp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/separator"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="@dimen/view_horizontal_margin_5dp"
        android:layout_marginTop="@dimen/view_horizontal_margin_5dp"
        android:background="@android:color/darker_gray" />

</LinearLayout>